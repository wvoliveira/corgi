// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model URL {
  id        BigInt   @id @default(autoincrement())
  keyword   String   @unique
  url       String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ip        String
  user_id   BigInt // relation
  clicks    BigInt

  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
  // title     String   @db.VarChar(255)
  // content   String?
  // published Boolean  @default(false)
  // author    User     @relation(fields: [authorId], references: [id])
  // authorId  Int
}

model URLMeta {
  id     BigInt @id @default(autoincrement())
  type   String
  value  String
  url_id BigInt // relation

  // id     Int     @id @default(autoincrement())
  // bio    String?
  // user   User    @relation(fields: [userId], references: [id])
  // userId Int     @unique
}

model Log {
  id           BigInt   @id @default(autoincrement())
  url_id       BigInt // relation
  createdAt    DateTime @default(now()) // click time
  referrer     String
  ip_address   String
  country_code String

  // id      Int      @id @default(autoincrement())
  // email   String   @unique
  // name    String?
  // posts   Post[]
  // profile Profile?
}

model LogMeta {
  id     BigInt @id @default(autoincrement())
  log_id BigInt // relation
  type   String
  value  String
}

model Options {
  id       BigInt  @id @default(autoincrement())
  name     String  @unique
  value    String
  autoload Boolean
}
