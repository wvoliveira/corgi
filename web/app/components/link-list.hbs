{{#if this.loadLinks.isRunning}}
  Loading...
{{else}}
  {{#each this.links as | link |}}
    keyword: {{link.keyword}}
    <br/>
  {{else}}
    No links are here... yet.
  {{/each}}
  <br/>
  {{#if this.links.meta}}
    page: {{this.links.meta.page}}
    limit: {{this.links.meta.limit}}
    sort: {{this.links.meta.sort}}
    total: {{this.links.meta.total}}
    pages: {{this.links.meta.pages}}
    <br/>

    {{this.pagination.back}}
    {{this.pagination.next}}
    <LinkTo @route="index" @query={{hash page=this.pagination.backPage limit=this.links.meta.limit}} disabled=true {{on "click" (fn this.translation)}}>back</LinkTo> |
    <LinkTo @route="index" @query={{hash page=this.pagination.nextPage limit=this.links.meta.limit}} disabled=true {{on "click" (fn this.translation)}}>next</LinkTo>

  {{/if}}
{{/if}}
